<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="passenger.ThankYouController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #f9c5d1, #f8d4e3);">



    <VBox alignment="CENTER" spacing="20.0" layoutX="150" layoutY="200">
        <Label fx:id="thankYouLabel"
               text="Thank you for booking with Spoink Airlines!"
               style="-fx-font-size: 24px; -fx-text-fill: white; -fx-font-weight: bold;" />
        <Label fx:id="bookingRefLabel"
       text="Booking Reference: SPOXXXXXX"
       style="-fx-font-size: 18px; -fx-text-fill: #333333;" />

        <Button text="Back to Home" onAction="#handleBackToHome" />
    </VBox>

</AnchorPane>
