<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="passenger.PaymentController"
      spacing="15"
      alignment="CENTER"
      prefWidth="400" prefHeight="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Payment Information" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="cardNumberField" promptText="Card Number" />
    <TextField fx:id="expiryDateField" promptText="MM/YY" />
    <PasswordField fx:id="cvvField" promptText="CVV" />
    <TextField fx:id="cardHolderField" promptText="Cardholder Name" />

    <Button text="Submit Payment" onAction="#handleSubmitPayment" />
    <Button text="Back" onAction="#handleBackToSummary" />
</VBox>

