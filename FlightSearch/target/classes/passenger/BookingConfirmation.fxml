<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="passenger.BookingConfirmationController"
      alignment="CENTER" spacing="20"
      prefWidth="400" prefHeight="300">

    <padding>
        <Insets top="30" right="20" bottom="20" left="20"/>
    </padding>

    <Label text=" Booking Confirmed!" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Label text="Thank you for flying with Yoink Airlines!" />
    <Button text="Exit" onAction="#handleExit"/>
</VBox>
