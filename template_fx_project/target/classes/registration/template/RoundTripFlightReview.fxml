<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="900" prefWidth="800" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="registration.template.RoundTripFlightReviewController2">
    <VBox spacing="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="flightPlan" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Los Angeles (LAX) ➝ Chennai (MAA)" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <!-- Outbound Flight -->
        <VBox spacing="10" style="-fx-border-color: #4CAF50; -fx-border-width: 2; -fx-padding: 15;">
            <Label fx:id="outboundDetails" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Outbound flight from Los Angeles to Chennai" />
            <HBox spacing="20">
                <VBox spacing="5">
                </VBox>
                <VBox spacing="5">
                    <Label fx:id="flightRoute" />
                    <Label fx:id="aircraftDetails" />
                    <Label fx:id="classNPrice" />
                </VBox>
            </HBox>
        </VBox>

        <!-- Inbound Flight -->
        <VBox spacing="10" style="-fx-border-color: #4CAF50; -fx-border-width: 2; -fx-padding: 15;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Inbound flight from Chennai to Los Angeles" />
            <HBox spacing="20">
                <VBox spacing="5">
                    <Label text="Wed, 28 May 2025" />
                    <Label text="04:00 → 14:15" />
                </VBox>
                <VBox spacing="5">
                    <Label fx:id="returnFlightPlan" />
                    <Label fx:id="returnDetails" />
                    <Label fx:id="returnDate" />
                    <Label fx:id="returnDepartureTime" />
                    <Label fx:id="returnFlightRoute" />
                    <Label fx:id="returnAircraftDetails" />
                    <Label fx:id="returnClassNPrice" />
                </VBox>
            </HBox>
        </VBox>

        <!-- Total and Continue -->
        <HBox alignment="CENTER_RIGHT" spacing="20">
            <VBox alignment="CENTER_LEFT">
                <Label style="-fx-font-weight: bold;" text="Total to be paid" />
                <Label fx:id="totalCost" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="USD 1,190.97" />
            </VBox>
            <Button fx:id="continueToPassengerrButton" style="-fx-background-color: #d32f2f; -fx-text-fill: white;" text="Continue to Passengers" />
        </HBox>
    </VBox>
</AnchorPane>
