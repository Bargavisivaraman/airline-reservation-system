<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="registration.template.SignInController">

    <top>
        <HBox alignment="TOP_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Back" onAction="#signInToFlightSearch"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15" maxWidth="500" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Sign In">
                <font><Font size="36.0" /></font>
            </Label>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Email:" prefWidth="80"/>
                <TextField fx:id="emailSignIn" prefWidth="300"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Password:" prefWidth="80"/>
                <PasswordField fx:id="pwdSignIn" prefWidth="300"/>
            </HBox>

            <Button fx:id="logInButton" text="Log in" onAction="#confirmSignIn" prefWidth="100"/>

            <Hyperlink text="Need To Create An Account? Sign Up Here" onAction="#signInToSignUp"/>

            <Label fx:id="signInDisplay" text="" textFill="red" style="-fx-font-size: 12;"/>
        </VBox>
    </center>
</BorderPane>