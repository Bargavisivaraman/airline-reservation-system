<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="registration.template.Account">

    <top>
        <HBox alignment="TOP_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Back" onAction="#accountInfoToFlightSearch"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Account Details">
                <font><Font size="30.0"/></font>
            </Label>

            <VBox spacing="10" alignment="CENTER">
                <Label text="First Name" style="-fx-font-size: 16px;"/>
                <Label fx:id="firstNameValue"/>

                <Label text="Last Name" style="-fx-font-size: 16px;"/>
                <Label fx:id="lastNameValue"/>

                <Label text="Email" style="-fx-font-size: 16px;"/>
                <Label fx:id="emailValue"/>
            </VBox>

            <Label text="My Bookings">
                <font><Font size="18.0"/></font>
            </Label>

            <ScrollPane fitToWidth="true" prefHeight="300" style="-fx-border-color: lightgray; -fx-background-color: #fafafa;">
                <content>
                    <VBox fx:id="bookingContainer" spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>