<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" 
           xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="registration.template.RoundTripPassengerDetailsController">
    <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-padding: 20;">
        <VBox spacing="20" alignment="TOP_CENTER" maxWidth="900" style="-fx-padding: 20;">
            
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label fx:id="flightPlanText" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="flightTotalCost" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </HBox>

            <!-- Section Title -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Complete your passenger details" />

            <!-- Split content area into left and right -->
            <HBox spacing="20" alignment="TOP_CENTER">
                
                <!-- LEFT SIDE: Passenger Details + Contact Details -->
                <VBox spacing="20" prefWidth="600">

                    <!-- Passenger Section -->
                    <VBox fx:id="passengerBox" spacing="15" style="-fx-background-color: #fefefe; -fx-padding: 20; -fx-border-color: lightgray;">
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" />

                        <HBox spacing="10">
                            <ComboBox fx:id="titleComboBox" prefWidth="120" promptText="Title" />
                            <TextField fx:id="firstNameField" prefWidth="200" promptText="First name" />
                            <TextField fx:id="lastNameField" prefWidth="200" promptText="Last name" />
                        </HBox>

                        <TextField fx:id="dobField" promptText="Date of birth" />

                        <Hyperlink text="Add frequent flyer membership details (optional)" />
                    </VBox>
                </VBox>

                <!-- RIGHT SIDE: Flight Info -->
                <VBox fx:id="flightInfoBox" spacing="10" prefWidth="280" style="-fx-background-color: #f9f9f9; -fx-padding: 20; -fx-border-color: lightgray;" />
            </HBox>

            <!-- Buttons -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="backToResultsButton" text="Return to Flights" onAction="#backToFlightResults"/>
                <Button style="-fx-background-color: #d32f2f; -fx-text-fill: white;" text="Book Flight" onAction="#bookFlight"/>
            </HBox>

        </VBox>
    </ScrollPane>
</StackPane>
