<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="registration.template.SignInController"
            prefHeight="400.0" prefWidth="600.0">
   <children>
      <!-- Page Title -->
      <Label layoutX="249.0" layoutY="55.0" text="Sign In">
         <font>
            <Font size="36.0" />
         </font>
      </Label>

      <!-- Labels -->
      <Label layoutX="74.0" layoutY="147.0" text="Email:" />
      <Label layoutX="74.0" layoutY="200.0" text="Password:" />

      <!-- Input Fields -->
      <TextField fx:id="emailSignIn" layoutX="147.0" layoutY="143.0" prefHeight="26.0" prefWidth="334.0" />
      <PasswordField fx:id="pwdSignIn" layoutX="147.0" layoutY="196.0" prefHeight="26.0" prefWidth="334.0" />

      <!-- Buttons -->
      <Button fx:id="logInButton" layoutX="273.0" layoutY="250.0" mnemonicParsing="false" onAction="#confirmSignIn" text="Log in" />
      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#signInToFlightSearch" text="Back" />

      <!-- Hyperlink to Sign Up -->
      <Hyperlink layoutX="175.0" layoutY="293.0" onAction="#signInToSignUp" prefHeight="23.0" prefWidth="246.0"
                 text="Need To Create An Account? Sign Up Here" />

      <!-- Error message display -->
      <Label fx:id="signInDisplay" layoutX="147.0" layoutY="325.0" prefWidth="334.0"
             text="" textFill="red" style="-fx-font-size: 12;" />
   </children>
</AnchorPane>
